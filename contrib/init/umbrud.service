[Unit]
Description=Umbru's distributed currency daemon
After=network.target

[Service]
User=umbrucore
Group=umbrucore

Type=forking
PIDFile=/var/lib/umbrud/umbrud.pid
ExecStart=/usr/bin/umbrud -daemon -pid=/var/lib/umbrud/umbrud.pid \
-conf=/etc/umbrucore/umbru.conf -datadir=/var/lib/umbrud -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
